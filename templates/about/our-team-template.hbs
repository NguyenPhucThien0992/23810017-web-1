      <h1>Our Team</h1>
      <div class="row">
        {{#each data}}
          <div class="col">
            <a
              href="#team/{{id}}"
              class="text-decoration-none"
              onclick="loadDetails('team/{{id}}','details-template','content')"
            >
              <img
                src="{{thumbpath}}"
                alt="{{name}}"
                class="rounded-3 mb-3 img-fluid"
              />
              <h4 class="text-dark">{{name}}</h4>
              <p class="text-black-50">
                {{summary}}
              </p>
            </a>
          </div>{{/each}}
      </div>