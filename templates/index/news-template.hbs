   <h1 class="text-black-10">News</h1>
      <div class="row py-3">
        {{#each data}}
          <div class="col">
            <div class="float-start me-3">
              <div class="date text-white text-center rounded-3 py-1">
                <h3>{{date}}</h3>
              </div>
              <a
                href="#"
                class="btn btn-link readmore ps-0"
                onclick="fetchData('news/{{id}}','details-template','content')"
              >Read more</a>
            </div>
            <div>
              <h3>{{name}}</h3>
              <p class="text-black-50">{{summary}}</p>
            </div>
          </div>
        {{/each}}
      </div>